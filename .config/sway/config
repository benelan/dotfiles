### Window assignments {{{1
#
# Automatically open apps in specific workspaces
assign [class="^firefox$"] $ws1
# assign [class="^Gnome-terminal$"] $ws2
assign [class="^(Chromium|Google-chrome|Vivaldi-stable)$"] $ws3
assign [class="^(Code|obsidian|Wireshark|Gnome-boxes)$"] $ws4
assign [class="^(file-roller|Gedit|Gnome-calculator|Gnome-calendar|Org\.gnome\.Nautilus)$"] $ws5
assign [class="^(Shotwell|Inkscape|vlc|Lollypop|Ghb|Gimp-\d+\.\d+|com\.sayonara\-player\.Sayonara)$"] $ws6
assign [class="^(discord|Signal)$"] $ws7
assign [class="^thunderbird$"] $ws8
assign [title="^Outlook \(PWA\).*"] $ws9
assign [title="^Microsoft Teams.*"] $ws10

# libreoffice window's don't have a class on startup so they need to be moved afterwards
for_window [class="^libreoffice-(startcenter|writer|calc|impress|draw|math)$"] move window to workspace $ws5


### UI {{{1
#
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu 13

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
# font pango:DejaVu Sans Mono 12

# Set primary gruvbox colorscheme colors
set $foreground #ebdbb2
set $background3 #665c54
set $background2 #504945
set $background1 #3c3836
set $background0_s #32302f
set $background0_h #1d2021
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $orange #d65d0e
set $gray #a89984
set $white #ffffff

# Start swaybar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3status
    # swaybar_command waybar
    tray_output primary
    font pango:Iosevka Nerd Font 12
    colors {
        # Bar background color
        background $background0_s
        # Text color used for blocks that do not have a color specified.
        statusline $foreground
        # Workspaces section
        #                    border  backgr. text
        focused_workspace    $orange $orange $background0_h
        inactive_workspace   $background0_h $background0_h $foreground
        active_workspace     $background0_h $background0_h $foreground
        urgent_workspace     $red $red $background0_s
    }
}

# class                 border|backgr|text|indicator|child_border
client.focused          $aqua $aqua $background0_h $gray $background3
client.focused_inactive $background0_h $background0_h $foreground $gray $background0_h
client.unfocused        $background0_h $background0_h $foreground $gray $background0_h
client.urgent           $red $red $white $red $red

# Smaller window borders
for_window [title=".*"] border pixel 1

include /etc/sway/config.d/*

[Unit]
Description=Remap keys in Gnome/X11

[Service]
Type=oneshot
ExecStartPre=/bin/sleep 5
ExecStart=/bin/sh -c "command -v setxkbmap >/dev/null 2>/dev/null && setxkbmap -option -option caps:escape -option terminate:ctrl_alt_bksp -option shift:both_capslock_cancel"

[Install]
WantedBy=org.gnome.SettingsDaemon.XSettings.target

# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    color_good = "#ebdbb2"
    color_degraded = "#d79921"
    color_bad = "#cc241d"
    # color_separator = "#ebdbb2"
}

order += "tztime local"
order += "read_file WEATHER"
order += "load"
order += "cpu_usage"
order += "memory"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"

# The /tmp/weather file is updated via a cronjob. Make sure to export the
# OPENWEATHER_API_KEY environment variable and add the weather script to PATH
# before your shell startup scripts check for interactivity.
#
# */20 * * * * bash -l -c 'weather info >/tmp/weather 2>/dev/null'
read_file WEATHER {
    path = "/tmp/weather"
    format = "%content"
    format_bad = ""
    separator_block_width = 25
}

tztime local {
    format = "%R %a %F"
    separator_block_width = 25
}

volume master {
    format = "VOL %volume"
    format_muted = "VOL: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    separator_block_width = 25
}

battery all {
    format = "%status %percentage (%remaining) %consumption"
    integer_battery_capacity = true
    low_threshold = "20"
    threshold_type = "percentage"
    separator_block_width = 25
}

wireless _first_ {
    format_up = "WIFI%quality (%essid)"
    format_down = "WIFI down"
    separator_block_width = 25
}

ethernet _first_ {
    format_up = "ETH %speed"
    format_down = ""
    separator_block_width = 25
}


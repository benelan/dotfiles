#!/usr/bin/env sh

# Remaps CapsLock to Escape because vim
# Press both Shift keys for CapsLock
# Control-Alt-Backspace restarts the shell in case gnome freezes up

if is-supported setxbmap; then
    setxkbmap -option -option caps:escape -option terminate:ctrl_alt_bksp -option shift:both_capslock_cancel
else
    echo "Missing a required dependency: setxbmap"
    exit 1
fi

#!/usr/bin/env bash

paths=(
  ~/.local/bin
  ~/.bin
  ~/.cargo/bin:
  ~/go/bin
  ~/.volta/bin
  ~/.fzf/bin
  /usr/local/sbin
  /usr/local/bin
  /usr/sbin
  /usr/bin
  /sbin
  /bin
  /usr/games
  /usr/local/games
  /snap/bin
)

export PATH
for p in "${paths[@]}"; do
  [[ -d "$p" ]] && PATH="$p:$(path_remove "$p")"
done
unset p paths
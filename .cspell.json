{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "language": "en",
  "version": "0.2",
  "allowCompoundWords": true,
  "dictionaries": ["nvim"],
  "ignorePaths": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "assets/**",
    "translations/**"
  ],
  "dictionaryDefinitions": [
    {
      "name": "nvim",
      "addWords": true,
      "path": "~/.config/nvim/spell/en.utf-8.add"
    }
  ]
}

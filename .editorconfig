# https://editorconfig.org/
root = true

[*]
    charset = utf-8
    insert_final_newline = true
    end_of_line = lf
    quote_type = double
    indent_style = space
    indent_size = 4
    curly_bracket_next_line = false
    spaces_around_brackets = false
    spaces_around_operators = true
    indent_brace_style = K&R

[*.{js,jsx,json,jsonc,ts,tsx,html,vue,svelte}]
    spaces_around_brackets = true
    indent_size = 2

[*.{css,scss,sass,less}]
    indent_size = 2

[*.lua]
    indent_size = 2

[Makefile]
    indent_style = tab
